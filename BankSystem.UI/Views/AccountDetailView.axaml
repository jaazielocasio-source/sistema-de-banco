<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
             x:Class="BankSystem.UI.Views.AccountDetailView">
  <StackPanel Spacing="8">
    <TextBlock Text="Detalle de cuenta" FontSize="20" FontWeight="Bold"/>
    <StackPanel Orientation="Horizontal" Spacing="12">
      <TextBlock Text="Cuenta:"/>
      <TextBlock Text="{Binding AccountNumber}"/>
      <TextBlock Text="Tipo:"/>
      <TextBlock Text="{Binding AccountType}"/>
      <TextBlock Text="Moneda:"/>
      <TextBlock Text="{Binding Currency}"/>
      <TextBlock Text="Balance:"/>
      <TextBlock Text="{Binding Balance, StringFormat='{}{0:C}'}"/>
      <TextBlock Text="Estado:"/>
      <TextBlock Text="{Binding Status}"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal" Spacing="8">
      <TextBlock Text="Desde"/>
      <DatePicker SelectedDate="{Binding FromDate}"/>
      <TextBlock Text="Hasta"/>
      <DatePicker SelectedDate="{Binding ToDate}"/>
      <ComboBox Width="150" ItemsSource="{Binding FilterOptions}" SelectedItem="{Binding FilterType}">
        <ComboBox.ItemTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding}"/>
          </DataTemplate>
        </ComboBox.ItemTemplate>
      </ComboBox>
      <Button Content="Filtrar" Command="{Binding RefreshTransactionsCommand}"/>
      <TextBlock Text="{Binding TransactionCount, StringFormat='{}Transacciones: {0}'}" Margin="12 0"/>
    </StackPanel>
    <controls:DataGrid ItemsSource="{Binding Transactions}" AutoGenerateColumns="True" Height="400"/>
  </StackPanel>
</UserControl>
