<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BankSystem.UI.Views.AdminView">
  <StackPanel Spacing="10">
    <TextBlock Text="Admin" FontSize="20" FontWeight="Bold"/>

    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="8">
      <StackPanel Spacing="6">
        <TextBlock Text="Crear cliente" FontWeight="Bold" FontSize="14"/>
        <TextBox Watermark="Nombre" Text="{Binding Name}"/>
        <TextBox Watermark="Email" Text="{Binding Email}"/>
        <TextBox Watermark="Teléfono ###-###-####" Text="{Binding Phone}"/>
        <TextBox Watermark="ID Gobierno" Text="{Binding GovId}"/>
        <Button Content="Crear" Command="{Binding CreateCustomerCommand}" Width="120"/>
      </StackPanel>
    </Border>

    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="8">
      <StackPanel Spacing="6">
        <TextBlock Text="Crear cuenta" FontWeight="Bold" FontSize="14"/>
        <StackPanel Orientation="Horizontal" Spacing="8">
          <TextBlock Text="Cliente Id"/>
          <NumericUpDown Minimum="1" Maximum="999999" Value="{Binding CustomerIdForAccount}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Spacing="8">
          <TextBlock Text="Tipo"/>
          <ComboBox SelectedValue="{Binding AccountType}" SelectedValueBinding="{Binding Tag}">
            <ComboBoxItem Content="1 Ahorro" Tag="1"/>
            <ComboBoxItem Content="2 Corriente" Tag="2"/>
            <ComboBoxItem Content="3 CD" Tag="3"/>
          </ComboBox>
          <TextBlock Text="Moneda"/>
          <ComboBox SelectedValue="{Binding AccountCurrency}" SelectedValueBinding="{Binding Tag}">
            <ComboBoxItem Content="USD" Tag="USD"/>
            <ComboBoxItem Content="EUR" Tag="EUR"/>
            <ComboBoxItem Content="JPY" Tag="JPY"/>
            <ComboBoxItem Content="KRW" Tag="KRW"/>
            <ComboBoxItem Content="BOB" Tag="BOB"/>
            <ComboBoxItem Content="GBP" Tag="GBP"/>
          </ComboBox>
        </StackPanel>
        <Button Content="Crear cuenta" Command="{Binding CreateAccountCommand}" Width="140"/>
      </StackPanel>
    </Border>

    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="8">
      <StackPanel Spacing="6">
        <TextBlock Text="Actualizar estado de cuenta" FontWeight="Bold" FontSize="14"/>
        <TextBox Watermark="Número de cuenta" Text="{Binding AccountNumberStatus}"/>
        <ComboBox ItemsSource="{Binding StatusOptions}" SelectedItem="{Binding NewStatus}"/>
        <Button Content="Actualizar" Command="{Binding SetStatusCommand}" Width="120"/>
      </StackPanel>
    </Border>
    <TextBlock Text="{Binding StatusMessage}" Foreground="Gray"/>
  </StackPanel>
</UserControl>
