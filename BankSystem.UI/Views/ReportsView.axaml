<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BankSystem.UI.Views.ReportsView">
  <StackPanel Spacing="8">
    <TextBlock Text="Reportes y e-Statements" FontSize="20" FontWeight="Bold"/>
    <StackPanel Orientation="Horizontal" Spacing="8">
      <TextBlock Text="Cuenta"/>
      <ComboBox ItemsSource="{Binding Accounts}" SelectedItem="{Binding SelectedAccount}" Width="180"/>
      <TextBlock Text="Mes"/>
      <NumericUpDown Minimum="1" Maximum="12" Value="{Binding Month}"/>
      <TextBlock Text="AÃ±o"/>
      <NumericUpDown Minimum="2000" Maximum="2100" Value="{Binding Year}"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal" Spacing="8">
      <Button Content="CSV" Command="{Binding ExportCsvCommand}"/>
      <Button Content="PDF" Command="{Binding ExportPdfCommand}"/>
      <Button Content="Enviar E-Statement" Command="{Binding SendEStatementCommand}"/>
    </StackPanel>
    <TextBlock Text="{Binding LastMessage}" TextWrapping="Wrap" Foreground="Gray"/>
  </StackPanel>
</UserControl>
