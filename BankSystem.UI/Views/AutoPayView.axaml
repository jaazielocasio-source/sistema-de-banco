<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:BankSystem.UI.Views"
             xmlns:controls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.DataGrid"
             x:Class="BankSystem.UI.Views.AutoPayView">
  <StackPanel Spacing="8">
    <TextBlock Text="Pagos automÃ¡ticos" FontSize="20" FontWeight="Bold"/>
    <controls:DataGrid ItemsSource="{Binding Payments}" AutoGenerateColumns="True" SelectedItem="{Binding SelectedPayment}" Height="260"/>
    <StackPanel Orientation="Horizontal" Spacing="8">
      <Button Content="Ejecutar hoy" Command="{Binding ExecuteTodayCommand}"/>
      <Button Content="Cancelar" Command="{Binding CancelCommand}"/>
      <TextBlock Text="{Binding Status}" Margin="12 0"/>
    </StackPanel>
    <Separator/>
    <views:AutoPayWizard DataContext="{Binding Wizard}"/>
  </StackPanel>
</UserControl>
